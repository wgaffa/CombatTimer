<Window x:Class="CombatTimer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CombatTimer.UI"
        mc:Ignorable="d"
        Title="Initiative Tracker" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="InitiativeList" TargetType="ItemsControl">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
              <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="TextBlock">
                        <Setter Property="Padding" Value="5" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="New Combat" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Right" Margin="10,10,0,0" TextWrapping="Wrap" Text="Round: " VerticalAlignment="Top"/>

        <ItemsControl Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource InitiativeList}">
            <TextBlock Text="Initiative #1" />
            <TextBlock Text="Initiative #2" />
            <TextBlock Text="Initiative #3" />
            <TextBlock Text="Initiative #4" />
        </ItemsControl>

    </Grid>
</Window>
